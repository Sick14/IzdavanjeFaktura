@model IzdavanjeFaktura.Models.InvoiceViewModel

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Invoice</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.InvoiceNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.InvoiceNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.InvoiceIssueDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.InvoiceIssueDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.InvoiceDueDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.InvoiceDueDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TotalPriceWithoutVAT)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TotalPriceWithoutVAT)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TotalPriceWithVAT)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TotalPriceWithVAT)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Customer)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customer)
        </dd>

        <dt>
            @Html.DisplayName("Country (VAT persentage)")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Country.Name) (@Html.DisplayFor(model => model.Country.VATPercentage)%)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.User.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User.Email)
        </dd>

    </dl>


    <hr />

    @foreach (var item in Model.InvoiceItems)
    {
        <dl class="dl-horizontal">

            <dt>
                @Html.DisplayNameFor(modelItem => item.Product.Description)
            </dt>

            <dd>
                @Html.DisplayFor(modelItem => item.Product.Description)
            </dd>

            <dt>
                @Html.DisplayNameFor(modelItem => item.Quantity)
            </dt>

            <dd>
                @Html.DisplayFor(modelItem => item.Quantity)
            </dd>

            <dt>
                @Html.DisplayNameFor(modelItem => item.PriceWithoutVAT)
            </dt>

            <dd>
                @Html.DisplayFor(modelItem => item.PriceWithoutVAT)
            </dd>

            <dt>
                @Html.DisplayNameFor(modelItem => item.TotalPriceWithoutVAT)
            </dt>

            <dd>
                @Html.DisplayFor(modelItem => item.TotalPriceWithoutVAT)
            </dd>

        </dl>
    }

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>